<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ControlsDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ControlsDemo"
    Shell.FlyoutBehavior = "Locked"
    Title="ControlsDemo">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Checkbox"
            ContentTemplate="{DataTemplate local:CheckboxDemoPage}"
            Route="CheckboxDemoPage" />
    <ShellContent
            Title="RadioButton"
            ContentTemplate="{DataTemplate local:RadioButtonDemoPage}"
            Route="RadioButtonDemoPage" />
</Shell>
